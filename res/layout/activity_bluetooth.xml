<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/bt_list_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Device:"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/bt_saved_device_listview"
        android:layout_width="match_parent"
        android:layout_height="150dp" >
    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="Device Around You:"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/bt_scaned_device_listview"
        android:layout_width="match_parent"
        android:layout_height="180dp" >
    </ListView>

    <LinearLayout
        android:id="@+id/bt_searching_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/bt_searching_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Searching..." />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_scan_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan" />

</LinearLayout>